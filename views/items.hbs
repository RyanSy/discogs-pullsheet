<h3>Discogs Pullsheet</h3>
<h6>Signed in as: {{username}}</h6>
  <table class="table table-striped">
    <tbody>
      {{#each orders}}
        <tr>
          <td>
            <h6>
              <span class="font-weight-bold mt-5">Order ID: </span><a href="https://www.discogs.com/sell/order/{{id}}" target="_blank">{{id}}</a><br>
              <span class="font-weight-bold">Created: </span>{{created}}<br>
              <span class="font-weight-bold">Status: </span>{{status}}
            </h6><br>
            {{#items}}
            <ul>
              <li>
                <div class="container">
                  <div class="row">
                    <div class="col-4">
                      <img class="img-fluid" src="{{thumbnail}}" alt="{{description}}">
                    </div>
                    <div class="col-8">
                    {{description}}
                    </div>
                  </div>
                </div>
                <br>
                <span class="font-weight-bold">Location: </span>{{item_location}}<br>
              </li>
            </ul>
            {{/items}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
