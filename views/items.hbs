<h3>Discogs Pullsheet</h3>
<h6>Signed in as: {{username}}<span class="ml-3"><a href="/logout">Log Out</a></span></h6>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#locationsList">
  Show Pullsheet
</button>

<!-- Modal -->
<div class="modal  " id="locationsList" tabindex="-1" role="dialog" aria-labelledby="locationsListTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="locationsListTitle">Locations List</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{#each orders}}
          {{#items}}
            <div><br>{{description}}<br><span class="font-weight-bold">Location: </span>{{item_location}}</div>
          {{/items}}
        {{/each}}
      </div>
    </div>
  </div>
</div>

<table class="table table-striped">
  <tbody>
    {{#each orders}}
      <tr>
        <td>
          <h6>
            <span class="font-weight-bold mt-5">Order ID: </span><a href="https://www.discogs.com/sell/order/{{id}}" target="_blank">{{id}}</a><br>
            <span class="font-weight-bold">Created: </span>{{created}}<br>
            <span class="font-weight-bold">Updated: </span>{{updated}}<br>
            <span class="font-weight-bold">Status: </span>{{status}}<br>
            <span class="font-weight-bold">Shipping Total: </span>${{shipping_amount}} ({{shipping_method}})<br>
            <span class="font-weight-bold">Items Total: </span>${{total}}<br>
            <span class="font-weight-bold">Additional Instructions: </span>{{additional_instructions}}<br>
            <p>
            <span class="font-weight-bold">Discogs Shipping Address: </span><p><pre>{{shipping_address}}</pre>
            {{#if paypal_data.name}}
              <span class="font-weight-bold">PayPal Shipping Address: </span><p><pre>{{paypal_data.name}}<br>{{paypal_data.address_line1}}<br>{{#if paypal_data.address_line2}}{{paypal_data.address_line2}}<br>{{/if}}{{paypal_data.city}}, {{paypal_data.state}} {{paypal_data.postal_code}}<br>{{paypal_data.country_code}}</pre>
              <span class="font-weight-bold mt-5">Discogs Link: </span><a href="https://www.discogs.com/sell/order/{{id}}" target="_blank">https://www.discogs.com/sell/order/{{id}}</a><br>
              <span class="font-weight-bold">PayPal Shipping Link: </span><a href="https://www.paypal.com/shiplabel/create/{{paypal_data.transaction_id}}" target="_blank">https://www.paypal.com/shiplabel/create/{{paypal_data.transaction_id}}</a><br>
            {{/if}}
          </p>
          </h6><br>
          <span class="font-weight-bold">Messages</span>
          {{#messages}}
                <div class="row mt-3 mb-3">
                  <p>
                    <div class="col-2">
                      <span>{{from}}:</span>
                      <br>
                      <span>{{timestamp}}</span>
                    </div>
                    <div class="col-10  ">
                      {{message}}
                    </div>
                  </p>
                </div>
          {{/messages}}
          <br>
          <span class="font-weight-bold">Items</span>
          {{#items}}
                <div class="row mt-3 mb-3">
                  <p>
                    <div class="col-2">
                      <img class="img-fluid" src="{{thumbnail}}" alt="{{description}}">
                    </div>
                    <div class="col-10  ">
                      {{description}}
                      <br>
                      <span class="font-weight-bold">Price:</span> ${{price}}
                      <br>
                      <span class="font-weight-bold">Location:</span> {{item_location}}
                    </div>
                  </p>
                </div>
          {{/items}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
